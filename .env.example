# YouTube Data API v3
YOUTUBE_API_KEY=your_youtube_api_key_here

# PostgreSQL
DATABASE_URL=postgresql://kidsvid:kidsvid@localhost:5432/kidsvid

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# Anthropic Claude API (content generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (TTS voice, DALL-E thumbnails)
OPENAI_API_KEY=your_openai_api_key_here

# Google AI (Gemini, Veo video, music, TTS)
GOOGLE_API_KEY=your_google_api_key_here

# ElevenLabs (voice generation - legacy)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Suno (music generation - fallback)
SUNO_API_KEY=your_suno_api_key_here

# Provider selection
VIDEO_PROVIDER=veo          # veo | nanobanana | runway | kling | sora
MUSIC_PROVIDER=gemini       # gemini | suno
VOICE_PROVIDER=openai       # openai | gemini
RUNWAY_API_KEY=your_runway_api_key_here

# YouTube OAuth2 (for publishing)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# Pipeline config
DRY_RUN=true
AUTO_PUBLISH=false
MANUAL_APPROVAL=true

# Logging
LOG_LEVEL=info
